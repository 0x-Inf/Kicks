<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"

    android:layout_margin="30dp">

    <RelativeLayout
        android:id="@+id/ImageAndTextKickContentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/kickFeaturedListImage"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:adjustViewBounds="true">

        </androidx.appcompat.widget.AppCompatImageView>


        <TextView
            android:id="@+id/kickFeaturedListNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/kickFeaturedListImage"
            android:text="Kicks For the Weekend"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textStyle="bold" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuredList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kickFeaturedListNameTextView" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>