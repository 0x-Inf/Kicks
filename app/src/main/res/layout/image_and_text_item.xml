<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_width="match_parent"
    android:padding="3dp"
    android:layout_height="400dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp">

    <ImageView
        android:id="@+id/kickFeaturedImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_golf">

    </ImageView>

    <RelativeLayout
        android:id="@+id/ImageAndTextKickContentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/kickFeaturedTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Popular Right Now "
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/kickFeaturedSubtitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@id/kickFeaturedTitleTextView"
            android:text="Ready Aim Fire"
            android:textSize="20sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>