<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="13dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hostingActivityTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hiking in Ngong'"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/hostingActivityImage"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:layout_margin="2dp"
        android:padding="1dp"
        android:background="@drawable/kick_item_bg"
        android:src="@drawable/img_golf" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hostingAttendeesRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
