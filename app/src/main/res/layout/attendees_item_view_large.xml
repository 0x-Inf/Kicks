<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">


    <ImageView
        android:id="@+id/attendeeitemimage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/attendee_large_image_description"
        android:elevation="2dp"
        android:src="@drawable/img_soccer">

    </ImageView>

    <TextView
        android:id="@+id/attendeeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/attendeeitemimage"
        android:text="@string/attendee_name_place_holder"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorPurple" />


</RelativeLayout>

