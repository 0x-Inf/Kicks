<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.SignUp.SignUpIntro">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/kicksTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/kicks"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="@color/colorMain"
            android:textSize="60sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/letsGetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/let_s_get"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kicksTitleTextView" />

        <TextView
            android:id="@+id/startedTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/started"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textSize="50sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/letsGetTextView" />

        <CheckBox
            android:id="@+id/termsAndConditionsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="48dp"
            android:checked="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/startedTextView" />

        <TextView
            android:id="@+id/agreeToTermsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/i_agree_to_the_terms_and_conditions"
            app:layout_constraintBaseline_toBaselineOf="@+id/termsAndConditionsCheckBox"
            app:layout_constraintStart_toEndOf="@+id/termsAndConditionsCheckBox" />

        <CheckBox
            android:id="@+id/privacyPolicyCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/termsAndConditionsCheckBox" />

        <TextView
            android:id="@+id/privacyPolicyTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/i_agree_to_the_privacy_policy"
            app:layout_constraintBaseline_toBaselineOf="@+id/privacyPolicyCheckBox"
            app:layout_constraintStart_toEndOf="@+id/privacyPolicyCheckBox" />


        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/signUpStart"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/start_sign_up_button_content_description"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:text="@string/start_sign_up"
            android:textAlignment="center"
            android:textColor="@color/textColorSecondaryInverse"
            app:backgroundTint="@color/backgroundInverted"
            android:theme="@style/MaterialTheme"
            app:layout_constraintBottom_toTopOf="@+id/guestTextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/privacyPolicyCheckBox" />

        <TextView
            android:id="@+id/guestTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/guest"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


