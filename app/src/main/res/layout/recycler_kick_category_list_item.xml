<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/kickCategoryRealativeL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/CategoryTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kick_category_name_placeholder"
            android:fontFamily="@font/roboto_medium"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/seeAllTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/CategoryTextview"
            android:layout_marginEnd="5dp"
            android:text="See All"
            android:textSize="20sp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:textColor="@color/colorMain" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/kicksRecyclerView"
            android:layout_below="@id/CategoryTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />
        <!--        <View-->
        <!--            android:layout_below="@id/kicksRecyclerView"-->
        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_marginTop="4dp"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:background="#FF0000FF" />-->


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorTransparentBlack" />


</LinearLayout>