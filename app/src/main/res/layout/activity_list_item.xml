<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <ImageView
        android:id="@+id/activityImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/img_bowling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/activityTitleRelativeView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activityTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bowling And Beer"
                android:layout_margin="5dp"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activityHostIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_profile_icon_24dp"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/activityHostName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="John Wick"
                android:layout_toEndOf="@id/activityHostIcon" />

            <ImageView
                android:id="@+id/activityHostProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activityHostName" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activityTimeIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/time_input_icon_24dp"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/activityDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="25 August"
                android:layout_toEndOf="@id/activityTimeIcon" />

            <TextView
                android:id="@+id/activityStartTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="19:00"
                android:layout_toEndOf="@id/activityDateTextView" />

            <TextView
                android:id="@+id/activityTimeDash"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:paddingTop="8dp"
                android:text="--"
                android:layout_toEndOf="@id/activityStartTimeTextView" />

            <TextView
                android:id="@+id/activityEndTimeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="21:00"
                android:layout_toEndOf="@id/activityTimeDash" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activityLocationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/location_icon_24dp"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/activityLocationTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="Village Market Arcade"
                android:layout_toEndOf="@id/activityLocationIcon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/activityCostIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/ic_cost_icon_24dp"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/activityCostTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="750"
                android:layout_toEndOf="@id/activityCostIcon" />

            <TextView
                android:id="@+id/activityCostConstantTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingTop="5dp"
                android:text="Per Person"
                android:layout_toEndOf="@id/activityCostTextView" />

            <TextView
                android:id="@+id/attendingPeopleConstantOpBracketText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activityCostConstantTextView"
                android:text="("
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/minAttendingPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attendingPeopleConstantOpBracketText"
                android:text="5"
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/attendingPeopleConstantDashText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/minAttendingPeople"
                android:text="--"
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/maxAttendingPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attendingPeopleConstantDashText"
                android:text="10"
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/attendingPeopleConstantPeopleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/maxAttendingPeople"
                android:text="People"
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

            <TextView
                android:id="@+id/attendingPeopleConstantCloBracketText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/attendingPeopleConstantPeopleText"
                android:text=")"
                android:paddingTop="5dp"
                android:layout_margin="5dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp">

                <TextView
                    android:id="@+id/activityTagTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="1dp"
                    android:text="Bowling"
                    android:layout_alignParentEnd="true" />

            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/quantum_white_100">

            <ImageView
                android:id="@+id/likeIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:src="@drawable/ic_like_icon" />

            <ImageView
                android:id="@+id/bookmarkIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bookmark_icon"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/likeIconImageView" />

            <ImageView
                android:id="@+id/shareIconImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_share2_icon"
                android:layout_margin="5dp"
                android:layout_toEndOf="@id/bookmarkIconImageView" />

        </RelativeLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>