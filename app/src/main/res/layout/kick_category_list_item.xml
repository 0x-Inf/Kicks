<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/kickCategoryRealativeL"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/CategoryTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cheap Thrills"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/seeAllTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBaseline="@id/CategoryTextview"
            android:layout_marginEnd="5dp"
            android:text="See All"
            android:textColor="@color/quantum_deeporange500" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/kicksRecyclerView"
            android:layout_below="@id/CategoryTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--        <View-->
        <!--            android:layout_below="@id/kicksRecyclerView"-->
        <!--            android:layout_width="fill_parent"-->
        <!--            android:layout_marginTop="4dp"-->
        <!--            android:layout_height="1dp"-->
        <!--            android:background="#FF0000FF" />-->


    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_gravity="bottom"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />


</LinearLayout>