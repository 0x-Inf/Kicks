<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="20dp">

    <RelativeLayout
        android:id="@+id/ImageAndTextKickContentRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/kickFeaturedListImage"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_golf"
            android:adjustViewBounds="true">

        </ImageView>


        <TextView
            android:id="@+id/kickFeaturedListNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Kicks For the Weekend"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textSize="25sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/featuredList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kickFeaturedListImage" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>