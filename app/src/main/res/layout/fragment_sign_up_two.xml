<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.SignUp.SignUpTwo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sign_up_two_back1">

        <TextView
            android:id="@+id/contactTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/contact_text"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contactTextView"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/source_sans_pro_regular"
            android:text="@string/details_text"
            android:textColor="@color/colorWhite"
            android:textSize="50sp" />

        <EditText
            android:id="@+id/email_addresss_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:autofillHints="@string/email_address_edit_text_hint"
            android:background="@android:color/transparent"
            android:hint="@string/email_address_edit_text_hint"
            android:inputType="textEmailAddress"
            android:padding="8dp"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/email_addresss_edit_text"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorTransparentBlack" />

        <EditText
            android:id="@+id/phone_number_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_addresss_edit_text"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:autofillHints="@string/phone_number_hint_text"
            android:background="@android:color/transparent"
            android:hint="@string/phone_number_hint_text"
            android:inputType="phone"
            android:padding="8dp"
            android:textSize="20sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/phone_number_edit_text"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/colorTransparentBlack" />

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/sign_up_two_next_efab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phone_number_edit_text"
            android:layout_centerInParent="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/roboto_medium"
            android:text="@string/sign_up_one_next_button_text"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:theme="@style/MaterialTheme"
            app:backgroundTint="@color/colorPurple"
            app:cornerRadius="2dp"
            app:elevation="5dp"
            app:rippleColor="@color/colorMain" />

        <!--        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton-->
