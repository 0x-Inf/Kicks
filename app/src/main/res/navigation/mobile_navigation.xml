<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">


    <fragment
        android:id="@+id/navigation_home"
        android:name="com.diablo.jayson.kicksv1.UI.Home.KickFeedFragment"
        android:label="Home"
        tools:layout="@layout/fragment_kick_feed">
        <action
            android:id="@+id/action_navigation_home_to_attendActivityActivity"
            app:destination="@id/attendActivityActivity" />
    </fragment>
    <fragment
        android:id="@+id/navigation_kick_select"
        android:name="com.diablo.jayson.kicksv1.UI.KickSelect.KickSelectFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_kick_select" />
    <fragment
        android:id="@+id/navigation_add_kick"
        android:name="com.diablo.jayson.kicksv1.UI.AddKick.AddActivityFragment"
        android:label="AddKick"
        tools:layout="@layout/fragment_add_activity" />


    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.diablo.jayson.kicksv1.UI.UserProfile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_navigation_profile_to_mainAttendActivityActivity"
            app:destination="@id/mainAttendActivityActivity" />
    </fragment>


    <fragment
        android:id="@+id/navigation_map_view"
        android:name="com.diablo.jayson.kicksv1.UI.MapFeed.KickMapFragment"
        android:label="Maps"
        tools:layout="@layout/fragment_kick_map" />

    <fragment
        android:id="@+id/navigation_active_kicks"
        android:name="com.diablo.jayson.kicksv1.UI.UserProfile.ActiveActivitiesFragment"
        android:label="Active"
        tools:layout="@layout/fragment_active_activities" />
    <activity
        android:id="@+id/attendActivityActivity"
        android:name="com.diablo.jayson.kicksv1.UI.AttendActivity.AttendActivityActivity"
        android:label="activity_attend_activity"
        tools:layout="@layout/activity_attend_activity" />
    <activity
        android:id="@+id/mainAttendActivityActivity"
        android:name="com.diablo.jayson.kicksv1.UI.AttendActivity.MainAttendActivityActivity"
        android:label="activity_main_attend_activity"
        tools:layout="@layout/activity_main_attend_activity" />


</navigation>